{
  "name": "zappalino",
  "version": "1.0.0",
  "author": "John Schoeman <johnschoeman1617@gmail.com>",
  "repository": "git@github.com:johnschoeman/zappolino.git",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "bin/build.sh",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o public/static/css/index.css",
    "start": "node bin/dev.js",
    "serve": "bin/serve.sh",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "prettier": "prettier -l '**/*.{js,jsx,ts,tsx}'",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "tsc": "npx tsc",
    "tsc:watch": "npx tsc --watch",
    "test:unit": "bun test src",
    "test:unit:watch": "bun test src --watch",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:chrome": "npx playwright test --project=chromium"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "effect": "^2.4.1",
    "fishery": "^2.2.2",
    "react": "^18.2.0",
    "solid-js": "^1.7.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.0",
    "babel-preset-solid": "^1.7.7",
    "browser-sync": "^2.27.9",
    "bun-types": "^1.0.1",
    "chalk": "2.4.2",
    "esbuild": "^0.19.2",
    "esbuild-plugin-solid": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "postcss": "^8.3.11",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2"
  }
}
